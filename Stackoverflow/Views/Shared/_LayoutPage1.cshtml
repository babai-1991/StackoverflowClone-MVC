@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title -StackOverflow</title>
    @Styles.Render("~/Styles/bootstrap")
    @Styles.Render("~/Styles/site")
    @Scripts.Render("~/Scripts/bootstrap")
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm text-light navbar-light">
            <a href="#" class="navbar-brand">Stackoverflow</a>

            <button class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/index">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/about">About</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/contact">Contact</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/categories">Category</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/home/questions">Questions</a>
                    </li>
                    @if (Session["CurrentUserName"] == null)
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="/account/login">Login</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/account/register">Register</a>
                        </li>
                    }
                    @if (Session["CurrentUserName"] != null)
                    {
                        <li class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                                <img src="~/Images/user.png" width="20px" />
                            </a>
                            <div class="dropdown-menu bg-info">
                                <a href="/account/logout" class="dropdown-item">
                                    LogOut
                                </a>
                                <a href="/account/changepassword" class="dropdown-item">
                                    Change Password
                                </a>
                                <a href="/account/changeprofile" class="dropdown-item">
                                    Change Profile
                                </a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <form class="form-inline" action="home/search">
                <input type="text" class="form-control m-sm-2" style="width: 150px" placeholder="search" name="search" />
                <button class="btn btn-success">Success</button>
            </form>
        </nav>
        @RenderBody()
    </div>
</body>
</html>
